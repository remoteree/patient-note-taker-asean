PORT=3001
MONGODB_URI=mongodb://localhost:27017/doc-ai
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:5173
NODE_ENV=development

# Deepgram API Key for speech transcription
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# OpenAI API Key for note generation
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Encryption Key for field-level encryption (AES-256-GCM)
# Generate a strong random key: openssl rand -base64 32
# This key encrypts sensitive data (transcripts, notes) at rest in MongoDB
ENCRYPTION_KEY=your-encryption-key-generate-with-openssl-rand-base64-32

# HTTPS/TLS Configuration (for production)
# Paths to SSL certificate and private key files
# Use Let's Encrypt or your CA for production certificates
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# MongoDB TLS Configuration
# Set to 'true' if using MongoDB Atlas or MongoDB with TLS enabled
# MONGODB_TLS=false
# MONGODB_TLS_ALLOW_INVALID=false  # Only for development/testing

# Cookie Security
# Set to 'true' to use secure cookies even in development (requires HTTPS)
# USE_SECURE_COOKIES=false
